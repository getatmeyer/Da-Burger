<h1>Eat Da Burger</h1>

{{!-- <h2>Cats that are not sleepy!</h2> --}}
<div class="row">
<div class="col-md-1"></div>
<div class="col-md-">

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-1"></div>
<div class="col-md-1"></div>

{{!-- <h2>Cats that are sleepy!</h2> --}}
<div class="col-md-1"></div>
<div class="col-md-3">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div class="col-md-1"></div>
<div class="col-md-1"></div>


</div>
{{!-- <h2>Add a Cat</h2> --}}
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name">
      <button type="submit">SUMBIT</button>

  </div>

  <div class="form-group">
    <input type="radio" name="devoured" value="0" checked><br>
    <input type="radio" name="devoured" value="1">
  </div>

</form>
